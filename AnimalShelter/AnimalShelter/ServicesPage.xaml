<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimalShelter.ServicesPage"
             BackgroundColor="Bisque">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Каталог услуг" FontSize="24" HorizontalOptions="Center" />
            <CarouselView x:Name="servicesCarousel">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" Orientation="Vertical">
                            <Image Source="{Binding ImageSource}" HeightRequest="200" />
                            <Label Text="{Binding Name}" FontSize="20" HorizontalOptions="Center" />
                            <Button Text="Записаться" Clicked="OnBookServiceClicked" />
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="AnimalShelter.ProfilePage"
             BackgroundColor="Bisque">
    <StackLayout Padding="10">
        <Label Text="Профиль" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="nameEntry" Placeholder="Имя" />
        <Entry x:Name="surnameEntry" Placeholder="Фамилия" />
        <Entry x:Name="patronymicEntry" Placeholder="Кличка животного" />
        <Entry x:Name="ExpEntry" Placeholder="Вид животного" />
        <Entry x:Name="Pethabits" Placeholder="Привычки питомца" />
        <!-- Текущая дата по умолчанию -->
        <DatePicker x:Name="birthDatePicker" Date="{x:Static sys:DateTime.Now}" />
        <Entry x:Name="PhoneNumEntry" Placeholder="Номер телефона" />
        <Entry x:Name="EmailEntry" Placeholder="E-mail адрес" />
        <Button Text="Добавить ещё один профиль" Clicked="OnAddProfileClicked" />
        <Button Text="Сохранить" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>